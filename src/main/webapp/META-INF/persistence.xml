<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="Proyecto" transaction-type="RESOURCE_LOCAL">
		<class>modelo.entidad.Departamento</class>
		<class>modelo.entidad.Docente</class>
		<class>modelo.entidad.Estudiante</class>
		<class>modelo.entidad.Tutoria</class>
		<class>modelo.entidad.Turno</class>
			<properties>
				<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tutorias"/>
				<property name="javax.persistence.jdbc.user" value="root"/>
				<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
				<property name="eclipselink.ddl-generation" value="none"/>
				<property name="javax.persistence.schema-generation.scripts.action" value="none"/>
			</properties>
	</persistence-unit>
</persistence>
